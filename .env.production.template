# Production Environment Variables Template
# Copy this to .env.production and fill in your production values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://doganhubstore.com
NEXT_PUBLIC_PRODUCTION_URL=https://doganhubstore.com
APP_NAME="DoganHub Store"
APP_VERSION=1.0.0

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_URL=https://doganhubstore.com
NEXTAUTH_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
SESSION_TIMEOUT=3600
REFRESH_TOKEN_EXPIRY=604800

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Vercel Postgres or external PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=doganhubstore_prod
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Upstash Redis or external Redis
REDIS_URL=redis://:password@host:6379
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TLS=true
ENABLE_REDIS_CACHE=true

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================
# Use live keys in production!
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_CURRENCY=usd

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@doganhubstore.com
SMTP_FROM_NAME="DoganHub Store"

# Alternative: SendGrid
# SENDGRID_API_KEY=SG.your_api_key

# ==============================================
# STORAGE CONFIGURATION (Optional)
# ==============================================
# AWS S3 or compatible storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=doganhubstore-uploads

# Azure Blob Storage (Alternative)
# AZURE_STORAGE_ACCOUNT=your-account
# AZURE_STORAGE_KEY=your-key
# AZURE_STORAGE_CONTAINER=uploads

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=doganhub-store

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Vercel Analytics (automatic if using Vercel)

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ==============================================
# SECURITY SETTINGS
# ==============================================
CORS_ORIGIN=https://doganhubstore.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_BETA_FEATURES=false
ENABLE_MAINTENANCE_MODE=false
ENABLE_API_DOCS=false
ENABLE_SWAGGER=false

# ==============================================
# LICENSE SYSTEM
# ==============================================
LICENSE_ENFORCEMENT_ENABLED=true
LICENSE_GRACE_PERIOD_DAYS=7
AUTO_UPGRADE_ENABLED=true
LICENSE_ENCRYPTION_KEY=your-license-encryption-key

# ==============================================
# i18n CONFIGURATION
# ==============================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,ar
ENABLE_RTL=true

# ==============================================
# WEBHOOKS
# ==============================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT_MS=5000

# ==============================================
# CACHE CONFIGURATION
# ==============================================
CACHE_TTL_SECONDS=3600
ENABLE_CDN_CACHE=true

# ==============================================
# OAUTH PROVIDERS (Optional)
# ==============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id
