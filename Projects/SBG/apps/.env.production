# Production Environment Configuration for dogan-ai.com
# GRC Control Administration Platform

# Application Settings
NEXT_PUBLIC_APP_URL=https://dogan-ai.com
NEXT_PUBLIC_APP_NAME="Dogan AI - GRC Platform"
NODE_ENV=production

# Database Configuration (PostgreSQL)
# Configure these in your cloud provider's environment variables
POSTGRES_HOST=your-production-db-host
POSTGRES_PORT=5432
POSTGRES_DB=dogan_grc_production
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_SSL=true
DB_POOL_MAX=20

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://dogan-ai.com

# Stripe Integration (if using billing)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@dogan-ai.com

# Redis (for caching and sessions)
REDIS_URL=redis://your-redis-host:6379

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Feature Flags
ENABLE_GRC_MODULE=true
ENABLE_AI_SCHEDULER=true
ENABLE_CCM_MONITORING=true
ENABLE_BILINGUAL_SUPPORT=true

# API Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Compliance Settings
DEFAULT_TIMEZONE=Asia/Riyadh
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar

# Audit & Logging
AUDIT_LOG_RETENTION_DAYS=2555
LOG_LEVEL=info
