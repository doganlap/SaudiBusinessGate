# DoganHubStore Environment Variables

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3050
NODE_ENV=development

# Port Configuration
PORT=3050
FRONTEND_SERVICE_PORT=5050

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Microsoft Authentication (REQUIRED)
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your_microsoft_client_id
NEXT_PUBLIC_MICROSOFT_TENANT_ID=your_tenant_id_or_common
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ZATCA Configuration (REQUIRED for Saudi Arabia)
ZATCA_ENVIRONMENT=sandbox
ZATCA_VAT_NUMBER=123456789012345
ZATCA_CR_NUMBER=1234567890
ZATCA_API_ENDPOINT=https://gw-fatoora.zatca.gov.sa
ZATCA_USERNAME=your_zatca_username
ZATCA_PASSWORD=your_zatca_password

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/doganhubstore
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=doganhubstore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_SSL=false
DB_POOL_MAX=20

# Email Service (for activation emails)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@doganhubstore.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@saudistore.com
FROM_NAME=Saudi Store

# AI Configuration (Optional)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key
GOOGLE_AI_API_KEY=your_google_ai_key

# Cloudflare Configuration (Optional)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your_zone_idflare-api-token

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=http://localhost:3051
WS_PORT=3051
