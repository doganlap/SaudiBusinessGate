# SBG Platform Production Environment Variables
# Copy this file to .env.production and update with your production values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://saudistore.sa
APP_NAME="Saudi Business Gate"
APP_VERSION=2.0.0

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-key-change-this-in-production
NEXTAUTH_URL=https://saudistore.sa
SESSION_TIMEOUT=3600

# Database Configuration
DATABASE_URL=postgresql://sbg_user:your-secure-password@postgres:5432/sbg_platform
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=sbg_platform
POSTGRES_USER=sbg_user
POSTGRES_PASSWORD=your-secure-password
DB_POOL_MAX=20

# Redis Configuration
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Security
CORS_ORIGIN=https://saudistore.sa
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# Email Configuration (Update with your SMTP settings)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@saudistore.sa
SMTP_FROM_NAME="Saudi Business Gate"

# Storage Configuration (Update with your cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=sbg-platform-uploads

# Monitoring Services
GRAFANA_PASSWORD=your-secure-grafana-password

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_MAINTENANCE_MODE=false
ENABLE_API_DOCS=true

# License System
LICENSE_ENFORCEMENT_ENABLED=true
LICENSE_GRACE_PERIOD_DAYS=7

# Performance
ENABLE_COMPRESSION=true
ENABLE_CDN_CACHE=true
CACHE_TTL_SECONDS=3600

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT_MS=5000
