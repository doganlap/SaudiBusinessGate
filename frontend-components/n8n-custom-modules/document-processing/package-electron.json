{
  "name": "document-processor-electron",
  "version": "2.0.0",
  "description": "Professional desktop application for document processing with local storage",
  "main": "electron-main.js",
  "homepage": "./",
  "author": "Your Organization",
  "license": "ISC",
  "scripts": {
    "start": "node index.js",
    "start:electron": "electron .",
    "dev": "concurrently \"npm run dev:server\" \"wait-on http://localhost:3002 && electron .\"",
    "dev:server": "NODE_ENV=development nodemon index.js",
    "build": "npm run build:app",
    "build:app": "electron-builder",
    "build:app:win": "electron-builder --win --publish never",
    "build:app:dir": "electron-builder --dir",
    "release": "electron-builder -mwl",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --config jest.config.js --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "validate-config": "node validate-config.js",
    "setup": "node setup.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.0.3",
    "mongodb": "^5.9.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "axios": "^1.4.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-notarize": "^1.2.2",
    "concurrently": "^8.2.1",
    "wait-on": "^7.0.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8"
  },
  "optionalDependencies": {
    "redis": "^4.6.10",
    "pdfkit": "^0.13.0",
    "joi": "^17.9.0",
    "express-rate-limit": "^6.7.0",
    "express-async-errors": "^3.1.1",
    "multer": "^1.4.5-lts.1",
    "crypto-js": "^4.1.1",
    "prom-client": "^14.2.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "googleapis": "^118.0.0",
    "openai": "^4.26.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}